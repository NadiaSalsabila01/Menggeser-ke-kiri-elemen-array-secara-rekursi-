#include<iostream>
#define maks 3
using namespace std;

class Queue{
private:
    int depan = 0;
    int banyak = 0;
    int belakang = 0;

    char A[maks];
public:
    Queue(){  
        banyak = 0;
        for (int i = 0; i < maks; i++){
            A[i] = ' ';
        }
    }

    bool kosong(){
        return banyak == 0;  

    }

    bool penuh(){
            return banyak == maks; 
    }

    void enqueue(char x){
        if (penuh()){
            cout<<"Enqueue "<< x <<" [Queue Penuh]";
        }else{            
            cout<<"Enqueue elemen --> "<< x;
            A[belakang] = x;
            belakang = (belakang + 1) % maks;
            banyak++;
        }
        cetak();
    }

    void dequeue(){
        if (kosong()){
            cout<<"Dequeue [Queue Kosong]";
        }else{
            cout<<"Dequeue elemen --> "<<A[depan];
            A[depan] = ' ';
            depan = (depan + 1) % maks;
            banyak--;
        }
        cetak();

    }

    void cetak(){
        cout<<"\t: ";
        for (int i = 0; i < maks; i++){
            cout<<"["<< A[i] << "]";
        }
        
        cout<<" , Depan = "<< depan+1 <<", Belakang = "<< belakang+1 <<", Banyak Data = "<< banyak <<endl;
    }
};


int main(){
    Queue queue;

    queue.dequeue();
    queue.enqueue('A');
    queue.enqueue('B');
    queue.enqueue('C');
    queue.enqueue('D');
    queue.dequeue();
    queue.dequeue();
    queue.dequeue();
    queue.dequeue();
//    cout<<endl;
//
//    //Proses Enquque kalau 'depan' di index 2 [1][2][3]
//    queue.enqueue('A');
//    queue.dequeue();
//    queue.enqueue('B'); // <-- Bahas dari sini
//    queue.enqueue('C');
//    queue.enqueue('D');
//    cout<<endl;
//
//    //Proses Dequeue kalau 'belakang' di index 2 [1][2][3]
//    queue.dequeue();
//    queue.dequeue();
//    queue.dequeue();
//    cout<<endl;
//
//    queue.dequeue();
    return 0;
}
